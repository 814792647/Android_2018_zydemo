<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MySelf">
    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#458b67"
        android:translationZ="2dp"
        android:elevation="2dp">
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:text=""
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/login_groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:textSize="15dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="40dp" />
        <TextView
            android:id="@+id/login_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="40dp"
            android:layout_toRightOf="@id/login_groupname"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25px"
        android:background="#ececec"
        android:layout_weight="0.3">
        <Button
            android:id="@+id/choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Login_Button"
            android:text="导入Excel" />
        <Button
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Login_Button"
            android:layout_below="@id/choose"
            android:text="导出Excel" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scrollbars="vertical"
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/output"/>
    </RelativeLayout>
</LinearLayout>
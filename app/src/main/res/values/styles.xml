<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Login_Button" parent="AppTheme">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:colorButtonNormal">@color/Login_Button</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Login_EditText" parent="AppTheme">
        <item name="colorControlNormal">@color/Login_Button</item>
        <item name="colorControlActivated">@color/Login_EditText</item>
    </style>

    <style name="Register_activity" parent="AppTheme">
        <item name="colorPrimaryDark">#555555</item>
    </style>

    <style name="Forgot_activity" parent="AppTheme">
        <item name="colorPrimaryDark">#555555</item>
    </style>

    <style name="Myself_activity" parent="AppTheme">
        <item name="colorPrimaryDark">#458b67</item>
    </style>

    <style name="Next_Button" parent="AppTheme">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:colorButtonNormal">@color/Login_Button</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
